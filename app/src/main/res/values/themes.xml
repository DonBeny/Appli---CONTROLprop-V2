<resources>
    <!-- Thème principal de l'application (mode clair) -->
    <style name="Theme.App" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Thème principal de l'application (mode sombre) -->
    <style name="Theme.App.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Thème de démarrage de l'application (SplashScreen) -->
    <style name="Theme.App.Starting" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Couleur de fond du Splash Screen -->
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <!-- Icône du Splash Screen -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <!-- Durée de l'animation de l'icône -->
        <item name="windowSplashScreenAnimationDuration">200</item>
        <!-- Couleur de l'arrière-plan après la disparition du Splash Screen -->
        <item name="postSplashScreenTheme">@color/background_primary_light</item>
    </style>

    <!-- Thème de démarrage de l'application (SplashScreen) (mode sombre) -->
    <style name="Theme.App.Starting.Dark." parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Couleur de fond du Splash Screen -->
        <item name="windowSplashScreenBackground">@color/background_primary_dark</item>
        <!-- Icône du Splash Screen -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <!-- Durée de l'animation de l'icône -->
        <item name="windowSplashScreenAnimationDuration">200</item>
        <!-- Couleur de l'arrière-plan après la disparition du Splash Screen -->
        <item name="postSplashScreenTheme">@color/background_primary_dark</item>
    </style>
</resources>